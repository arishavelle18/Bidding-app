<%= form_with model:@bid,url:bid_path,data:{turbo:false},method: :post do |f| %>
    <div class="mb-3">
        <%= f.label :bid_value,class:"mb-3"%>
        <%= f.number_field :bid_value,min:0,required:true%>
    </div>
      
    <%# the product and user foreign key %>
    
    <%= f.hidden_field :user_id,value:current_user.id %>
    <%= f.hidden_field :product_id,value:@product.id %>

    <div class="mb-3">
        <%= f.submit yield(:button),class:"btn btn-success" %>
    </div>
    

<% end %>
